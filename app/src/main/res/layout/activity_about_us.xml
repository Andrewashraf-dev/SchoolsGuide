<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true" />

    <!-- App name -->
    <TextView
        android:id="@+id/app_name_text_view"
        android:textColor="@color/blue2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/app_name" />

    <!-- App Description -->
    <TextView
        android:id="@+id/app_Description_text_view"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="App Description" />

    <TextView
        android:id="@+id/app_Description_text_view2"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="normal"
        android:text="@string/app_description" />

    <!-- App version -->
    <TextView
        android:id="@+id/version_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/version" />

    <!-- Developer information -->
    <TextView
        android:id="@+id/developer_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textSize="16sp"
        android:text="@string/developer_info" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="340dp"
        android:src="@drawable/img2" />


    <TextView
        android:id="@+id/contact_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Us"
        android:layout_below="@id/contact_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/facebook_logo"
        android:background="@drawable/circular_background"
        android:clickable="true"
        android:padding="16dp"
        android:layout_marginTop="-50dp"
        android:layout_marginStart="140dp"/>

    <ImageView
        android:id="@+id/igimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/instagram_logo"
        android:background="@drawable/circular_background"
        android:clickable="true"
        android:padding="16dp"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="240dp"/>

    <Button
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:layout_marginTop="65dp"
        android:layout_marginStart="95dp"
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"/>

</LinearLayout>